{
  "compilerOptions": {
    "lib": ["es2021"],
    "moduleResolution": "node",
    "module": "ESNext",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2021",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib"
  },
  "include": ["src/**/*.ts", "handler.ts", "main.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "typeRoots": [
    "./src/@types",
    "./node_modules/@types"
  ],
  "files": [
    "./src/@types/express/index.d.ts"
  ],
}
